{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "voodoo-doll",
    "labels": {
      "app.kubernetes.io/name": "voodoo-doll"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "app",
        "image": "ghcr.io/partiallyordered/voodoo-doll:0.3.1",
        "ports": [
          {
            "containerPort": 3030
          }
        ],
        "env": [
          {
            "name": "HOST_IP",
            "valueFrom": {
              "fieldRef": {
                "fieldPath": "status.podIP"
              }
            }
          }
        ]
      }
    ]
  }
}
